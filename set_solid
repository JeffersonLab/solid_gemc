#!/bin/tcsh
#source this script to setup SoLID software

#the default version, change it to use other version you want
setenv JLAB_VERSION 1.2

#default installation on ifarm and farm nodes, change it to use different installation
setenv JLAB_ROOT /site/12gev_phys

#default SVN checkout on ifarm and farm nodes, change it to your local SVN checkout location
setenv SoLID_GEMC /home/zwzhao/solid/solid_svn/solid/solid_gemc2 #solid_gemc location

#setenv PATH /apps/cmake/bin/:{$PATH}     #add path for cmake2.8 on ifarm with CentOS6.2 only

#no need to modify variables below generally
source $JLAB_ROOT/$JLAB_VERSION/ce/jlab.csh       #setup basic enviroment variables 
setenv LD_LIBRARY_PATH ${GEMC}/source:${LD_LIBRARY_PATH}   # add path for "libgemc.so"
setenv GEMC_FIELD SoLID_GEMC/field
setenv PATH ${SoLID_GEMC}/source/${GEMC_VERSION}:${PATH}     # add path for "solid_gemc" binary
setenv GEMC_HOST soliddb.jlab.org   #use this if your system is on jlab network
#setenv GEMC_HOST 127.0.0.1       #use this if you are tunnleing to access mysql server
setenv GEMC_DB solid_geometry       #the official detector database
setenv GEMC_BANK solid_banks        #the official output bank info
#setenv GEMC_DB   test              #user geometry for test
#setenv GEMC_BANK test              #user banks for test
setenv GEMC_USER soliduser          #this user only can read database, used for run simulation
setenv GEMC_PASS ilovesolid         #readonly user password
#setenv GEMC_USER soliddev          #this user can read and write, used for update database
#setenv GEMC_PASS                   #ask other solid gemc develeoper for this password
