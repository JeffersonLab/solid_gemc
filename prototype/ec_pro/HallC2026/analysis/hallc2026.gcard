<option name="INTEGRATEDRAW" value="flux"/>

<option name="HIT_PROCESS_LIST" value="solid"/>
<option name="PHYSICS" value="QGSP_BERT+STD+Optical"/>
<option name="SAVE_ALL_MOTHERS" value="1"/>
<option name="RECORD_PASSBY" value="1"/>
<option name="HALL_MATERIAL" value="G4_AIR"/>
<option name="RECORD_OPTICALPHOTONS" value="1"/>

<option name="FIELD_DIR" value="../field"/>
<option name="HALL_FIELD" value="halbach_11ring_4col_field_map"/>
<option name="FIELD_PROPERTIES" value="halbach_11ring_4col_field_map, 1*mm, G4ClassicalRK4,linear"/>

<option name="MAX_X_POS" value="50000"/>
<option name="MAX_Y_POS" value="50000"/>
<option name="MAX_Z_POS" value="50000"/>
<option name="HALL_DIMENSIONS" value="50*m,50*m,50*m"/>

