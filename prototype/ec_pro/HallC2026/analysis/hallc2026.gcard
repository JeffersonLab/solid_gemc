<detector name="../geometry/beamline" factory="TEXT" variation="LD2"/>
<detector name="../geometry/cc_pro_tcd" factory="TEXT" variation="18deg"/>
<detector name="../geometry/cc_pro" factory="TEXT" variation="Original"/>
<detector name="../geometry/solid_spd" factory="TEXT" variation="Original"/>
