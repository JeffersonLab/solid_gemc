#!/bin/sh
gemc \
-gcard=solid_CLEO_PVDIS.gcard \
-DBHOST=$GEMC_HOST \
-HIT_PROCESS_LIST=solid \
-HALL_MATERIAL=Vacuum \
-RECORD_PASSBY=1 \
-FIELD_DIR=$GEMC_field \
-HALL_FIELD=solenoid_CLEO \
-SCALE_FIELD="solenoid_CLEO, -1" \
-BEAM_P="chargedgeantino, 5.5*GeV, 25*deg, 0*deg" \
-SPREAD_P="5.5*GeV, 25*deg, 180*deg" \
-BEAM_V="(0, 0, 10)cm" \
-SPREAD_V="(0.7, 20)cm" \
-N=1e6 \
-OUTPUT="evio,negative.evio" \
-USE_QT=0

gemc_evio2root negative.evio acceptance_solid_CLEO_PVDIS_negative_SCALEMIN1.4MAX1.4_cutinner.root

